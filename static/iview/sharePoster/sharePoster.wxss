/* shopping/productInfo/sharePoster/sharePoster.wxss */
.canvas-wrap, .canvas-wrap .bg{
    position: fixed;
    z-index: 100;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}
.canvas-wrap .bg{
    z-index: 101;
    background: rgba(0,0,0,.5);
}

.share-canvas{
    z-index: 105;
    margin: 150rpx auto 0;
    background: #fff;
}

.btn{
    border-radius: 0;
    background: #C5B28D;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    position: relative;
    z-index: 105;
}
.btn .icon{
    display: block;
    width: 26rpx;
    height: 27rpx;
    margin-right: 10rpx;
}